<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#3d3c3c"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/highScore_position"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerInside"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_purple"
        android:textSize="42sp"
        android:textStyle="bold"
        tools:text="1." />

    <RelativeLayout
        android:id="@+id/client_list_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/highScore_position"
        android:layout_alignTop="@+id/highScore_position"
        android:layout_toEndOf="@id/highScore_position">

        <TextView
            android:id="@+id/highScore_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/background_light"
            tools:text="Name" />

        <TextView
            android:id="@+id/highScore_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/highScore_name"
            android:layout_alignBottom="@+id/highScore_name"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:paddingEnd="4dp"
            android:paddingStart="0dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/holo_purple"
            android:textSize="24sp"
            tools:text="666" />

    </RelativeLayout>

</RelativeLayout>
