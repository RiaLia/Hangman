<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#3d3c3c"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ria.hangman.Category">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="342dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/hint"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="353dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:fontFamily="monospace"
        android:text="@string/category"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.444" />

    <Button
        android:id="@+id/randomButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="randomClicked"
        android:text="@string/Random"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/animalsButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="animalClicked"
        android:text="@string/Animals"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/randomButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/randomButton" />

    <Button
        android:id="@+id/countriesButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="countriesClicked"
        android:text="@string/Countries"
        app:layout_constraintLeft_toLeftOf="@+id/animalsButton"
        app:layout_constraintTop_toBottomOf="@+id/animalsButton" />

    <Button
        android:id="@+id/vehiclesButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="vehiclesClicked"
        android:text="@string/Vehicles"
        app:layout_constraintLeft_toLeftOf="@+id/animalsButton"
        app:layout_constraintTop_toBottomOf="@+id/countriesButton" />

    <Button
        android:id="@+id/enzoButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="13dp"
        android:onClick="enzoClicked"
        android:text="@string/Encyklopedia"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/vehiclesButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vehiclesButton" />

    <Button
        android:id="@+id/foodButton"
        style="@style/Catbutton"
        android:layout_width="322dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:onClick="foodClicked"
        android:text="@string/food"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/enzoButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enzoButton" />

</android.support.constraint.ConstraintLayout>
